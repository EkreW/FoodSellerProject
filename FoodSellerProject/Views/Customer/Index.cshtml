@using Entitiy_Layer.Concrete
@model List<Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Müşteriler Sayfası</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    <b>Şirket Adı : </b>@item.CompanyName
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-10">
                                            <h2 class="lead"><b>@item.CustomerName</b></h2>
                                            <p class="text-muted text-sm"><b>Şehir: </b>@item.City </p>
                                            <ul class="ml-4 mb-1 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-angle-double-down"></i></span> Favaori Siparişleri : <i>Düzenlenecek..</i></li>
                                                <li class="small"><span class="fa-li"><i class="fas far fa-envelope"></i></span> Mail : @item.CustomerMail</li>
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone # : @item.ContactNo</li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="~/dist/img/user1-128x128.jpg" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="#" class="btn btn-sm bg-teal">
                                            <i class="fas fa-comments">Önceki Siparişleri</i>
                                        </a>
                                        <a href="/Customer/EditCustomer/@item.CustomerID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profili Düzenle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
    <a href="/Customer/AddCustomer" class="btn btn-info">Yeni Müşteri Ekle</a>
</body>
</html>